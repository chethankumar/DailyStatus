<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/status_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="@drawable/white_grain"
        android:elevation="12dp"
        card_view:cardCornerRadius="4dp">

        <status.chethan.CircularImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"
            android:padding="10dp"
            android:src="@drawable/default_photo"
            android:id="@+id/calendar_view_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chethan"
            android:id="@+id/status_card_name"
            android:layout_alignTop="@+id/status_card_view"
            android:layout_alignLeft="@+id/status_card_view"
            android:layout_alignStart="@+id/status_card_view"
            android:textSize="21sp"
            android:textColor="#ff24a1ff"
            android:layout_marginLeft="65dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Xamarin 64 bit updates\n Cordova integration"
            android:id="@+id/status_card_text"
            android:layout_alignTop="@+id/status_card_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

</android.support.v7.widget.CardView>

